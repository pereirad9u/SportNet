
<div class="container">
  <div class="row">
  {% if elements|length > 0 %}
  <div class="col s7 offset-s2">
    <ul class="col s12">
    {% for elem in elements %}
      <li class="collection-item dismissable col s12"><div>{{elem.nom}} - {% if elem.nom_responsable != "" %}{{elem.nom_responsable}} {{elem.prenom_responsable}}{% else %}{{ elem.nom_participant }} {{ elem.prenom_participant }}{% endif %} -- Prix : {{elem.prix}} €<a href="/delElemPanier/{{elem.id_elem}}" class="secondary-content"><i class="material-icons">delete</i></a></div></li>
    {% endfor %}
    </ul>
    <h5 class="col s12 offset-s1">Prix total : {{ prix_total }} €</h5>
    <a class="btn waves-effect waves-light col offset-s2" href="/inscriptionall">Règler vos inscriptions
      <i class="material-icons right">send</i>
    </a>
  </div>
  {% else %}
    <div class="row">
      <h5>Votre panier est vide.</h5>
    </div>
  {% endif %}
  </div>
</div>
