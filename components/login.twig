
{%  if errors != "" %}
<div class="row red-text center">
    <p>Mauvais mail ou mauvais mot de passe</p>
</div>
{% endif %}

<div>
    <form method="post" name="login" class="span-12 offset-1">
        <div class="row">
            <div class="input-field span-4 offset-2">
                <input name="email" type="text" placeholder="email">
            </div>
            </div>
            <div class="row">

            <div class="input-field span-4 offset-2">
                <input name="password" type="password" placeholder="mot de passe">
            </div>
        </div>
        <div class="row center">
            <button class="btn waves-effect waves-light" type="submit" name="action"  value="login">Connexion !
                <i class="material-icons right">send</i>
            </button>
        </div>
    </form>
</div>
