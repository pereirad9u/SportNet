
{%  if errors != "" %}
<div class="row red-text center">
    <p>Mauvais mail ou mauvais mot de passe</p>
</div>
{% endif %}

<div>
    <h4 class="center">Connexion participant</h4>
    <form method="post" name="loginuser" class="col s12 l8 offset-l3 m8 offset-m3">
        <div class="row">
            <div class="input-field col s12 l4 offset-l4 m4 offset-m4">
                <input name="email" type="text" placeholder="email">
            </div>
            </div>
            <div class="row">

            <div class="input-field col s12 l4 offset-l4 m4 offset-m4">
                <input name="password" type="password" placeholder="mot de passe">
            </div>
        </div>
        <div class="row center">
            <button class="btn waves-effect waves-light" type="submit" name="action"  value="loginuser">Connexion !
                <i class="material-icons right">send</i>
            </button>

        </div>
        <div class="row center">
            <a href="/signupuser">Pas de compte ? Inscrivez-vous !</a>
        </div>
    </form>
</div>
